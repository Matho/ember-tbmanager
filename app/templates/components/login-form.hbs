<div id="validationErrorWrapper">
  <div class="validationErrors">
    {{#if errorMessage}}
      {{errorMessage}}
    {{/if}}
  </div>
</div>

<form id="loginForm" {{action "authenticate" on="submit"}}>
  <div class="form-horizontal">
    <div class="form-group has-feedback ">
      <label class="col-sm-2 control-label">Email*</label>
      <div class="col-sm-10">
        {{input type="text"  value=identification placeholder="Enter Login" class="form-control username-field"}}
        {{#if item.isValidEmail}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
      </div>
    </div>
    <div class="form-group has-feedback ">
      <label class="col-sm-2 control-label">Password*</label>
      <div class="col-sm-10">
        {{input value=password type="password" placeholder="Enter Password" class="form-control password-field"}}
        {{#if item.password}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
      </div>
    </div>
    <div class="form-group has-feedback">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-10">
        <button type="submit" class="login-btn">Login</button>
      </div>
    </div>
  </div>
</form>
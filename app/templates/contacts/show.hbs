<h1>Contacts</h1>

{{#link-to "contacts.new"}}Create{{/link-to}}

<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Surname</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Web</th>
    <th>City</th>
    <th>Address</th>
    <th>Country</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td>{{model.contact.id}}</td>
    <td>{{model.contact.name}}</td>
    <td>{{model.contact.surname}}</td>
    <td>{{model.contact.phone}}</td>
    <td>{{model.contact.email}}</td>
    <td>{{model.contact.web}}</td>
    <td>{{model.contact.city}}</td>
    <td>{{model.contact.address}}</td>
    <td>{{model.contact.country.title}}</td>
    <td>
      <button type="button" class="btn btn-danger" {{action 'deleteContact' country}}>Delete</button>
    </td>
  </tr>

  </tbody>
</table>